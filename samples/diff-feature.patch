+import { Router } from "express";
+import { z } from "zod";
+import { WebhookService } from "../services/webhook.js";
+import { authenticate } from "../middleware/auth.js";
+import { validate } from "../middleware/validate.js";
+
+const router = Router();
+
+const createWebhookSchema = z.object({
+  url: z.string().url(),
+  events: z.array(z.enum(["order.created", "order.updated", "order.cancelled"])),
+  secret: z.string().min(16).optional(),
+});
+
+const updateWebhookSchema = createWebhookSchema.partial();
+
+router.use(authenticate);
+
+// List webhooks for the authenticated user
+router.get("/", async (req, res) => {
+  const webhooks = await WebhookService.listByUser(req.user!.id);
+  res.json({ webhooks });
+});
+
+// Create a new webhook
+router.post("/", validate(createWebhookSchema), async (req, res) => {
+  const webhook = await WebhookService.create({
+    userId: req.user!.id,
+    ...req.body,
+  });
+  res.status(201).json({ webhook });
+});
+
+// Get a specific webhook
+router.get("/:id", async (req, res) => {
+  const webhook = await WebhookService.findById(req.params.id, req.user!.id);
+  if (!webhook) return res.status(404).json({ error: "Webhook not found" });
+  res.json({ webhook });
+});
+
+// Update a webhook
+router.patch("/:id", validate(updateWebhookSchema), async (req, res) => {
+  const webhook = await WebhookService.update(req.params.id, req.user!.id, req.body);
+  if (!webhook) return res.status(404).json({ error: "Webhook not found" });
+  res.json({ webhook });
+});
+
+// Delete a webhook
+router.delete("/:id", async (req, res) => {
+  const deleted = await WebhookService.delete(req.params.id, req.user!.id);
+  if (!deleted) return res.status(404).json({ error: "Webhook not found" });
+  res.status(204).end();
+});
+
+export { router as webhookRouter };
